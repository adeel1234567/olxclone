@{
    ViewBag.Title = "navigationbar_login";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <title>Search</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="~/Home">Home</a>
                </div>
                @if (ViewBag.temp != null)
                {
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                        <form class="navbar-form navbar-left" role="search" method="post" action="/home/search">
                            <div class="form-group">
                                <div class="col-sm-4">
                                    <input name="search" type="text" class="form-control" placeholder="Search">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-default" name="button">Search</button>
                        </form>
                        <ul class="nav navbar-nav navbar-right">
                            @if (Session["email"] != null)
                            {
                                <li><a href="/Home/UserAdd">My Adds</a></li>
                                <li><a href="/Home/post_add">Submit Add</a></li>
                                <li><a href="/Home/signout">Sign Out</a></li>

                            }
                            else
                            {
                                <li><a href="/Home/signup">Sign up</a></li>
                                <li><a href="/Home/signin">Sign in</a></li>
                            }

                        </ul>
                    </div><!-- /.navbar-collapse -->
                }
                else
                {



                <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                        <form class="navbar-form navbar-left" role="search" method="post" action="/Home/search">
                            <div class="form-group">
                                <div class="col-sm-4">
                                    <input name="search" type="text" class="form-control" placeholder="Search">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-default" name="button">Search</button>
                        </form>
                        <ul class="nav navbar-nav navbar-right">
                            @if (Session["email"] != null)
                            {
                                <li><a href="/Home/post_add">Submit Add</a></li>
                                <li><a href="/Home/signout">Sign Out</a></li>

                            }
                            else
                            {
                                <li><a href="/Home/signup">Sign up</a></li>
                                <li><a href="/Home/signin">Sign in</a></li>
                            }

                        </ul>
                    </div><!-- /.navbar-collapse -->
                }
            </div><!-- /.container-fluid -->
        </nav>
</div>

</body>